@model in2projekt.Models.BlogPost
@{
    Layout = null; 
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Confirm Delete</title>
    <link rel="stylesheet" href="/css/details.css" />
</head>
<body>
    <div class="confirmation-container">
        <h3>Are you sure you want to delete this post?</h3>
        <h4>@Model.Title</h4>
        <p>@Model.Content</p>

        
        <form method="post" action="@Url.Action("DeleteConfirmed", "Blogs")">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn-confirm">Yes, delete it!</button>
        </form>

       
        <a href="@Url.Action("Details", "Blogs", new { id = Model.Id })">
            <button class="btn-cancel">No, go back</button>
        </a>
    </div>
</body>
</html>
